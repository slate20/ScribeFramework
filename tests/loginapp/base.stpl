    <title>{{ page_title | default('Login Demo') }}</title>
    <link rel="stylesheet" href="/static/css/style.css">
    {% block extra_head %}{% endblock %}
</head>
<body>
    {% if 'user_id' in session %}
    <nav class="navbar">
        <a href="/">Home</a>
        <a href="/dashboard">Dashboard</a>
